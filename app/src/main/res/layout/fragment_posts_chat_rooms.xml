<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragements.BooksChatRoomsFragment">

    <com.wang.avi.AVLoadingIndicatorView
        android:layout_centerInParent="true"
        android:id="@+id/postChatRoomAvi"
        android:elevation="1dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:indicatorName="BallClipRotateMultipleIndicator"
        app:indicatorColor="@color/hamburger"
        android:visibility="visible"
        style="@style/AVLoadingIndicatorView" />

    <TextView
        android:visibility="gone"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/open_sans_light"
        android:id="@+id/postChatRoomEmptyMsg"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="@color/drawerMenuGray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Conversation found. Conversation will be made once you accept a proposal" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/postChatRoomChatIcon"
        android:layout_marginBottom="24dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/postChatRoomEmptyMsg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_speech_bubble" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="12dp"
        android:layout_centerInParent="true"
        android:id="@+id/postChatRoomRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>