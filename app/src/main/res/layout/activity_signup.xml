<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loginSignUpBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="72dp"
            android:src="@drawable/app_logo_cap" />

        <LinearLayout
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/exchange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="1dp"
                android:fontFamily="@font/basic"
                android:text="EXCHANGE"
                android:textColor="@color/hamburger"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:fontFamily="@font/allerta"
                android:text="learning"
                android:textColor="@color/drawer_orange"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/appTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/montserrat"
            android:text="Create account with your email"
            android:textColor="@color/drawerMenuGray"
            android:textSize="16sp" />

        <androidx.cardview.widget.CardView
            android:foreground="@drawable/background_rectangle_ouline"
            android:id="@+id/FNametextInputEditTextLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text1"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:elevation="0dp"
            app:cardCornerRadius="2dp"
            app:cardElevation="0dp">

            <EditText
                android:id="@+id/signUpFNametextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:lines="1"
                android:maxLines="1"
                android:backgroundTint="@color/fullwhite"
                android:fontFamily="@font/open_sans_light"
                android:hint="First Name"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                android:textColor="@color/darkGray"
                android:textColorHint="@color/darkGray"
                android:textSize="18sp"
                android:theme="@style/LoginEditTextStyle" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/LNametextInputEditTextLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/FNametextInputEditTextLayout"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:foreground="@drawable/background_rectangle_ouline"
            android:layout_marginEnd="16dp"
            android:elevation="0dp"
            app:cardCornerRadius="2dp"
            app:cardElevation="0dp">

            <EditText
                android:id="@+id/signUpLNametextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:lines="1"
                android:maxLines="1"
                android:backgroundTint="@color/fullwhite"
                android:fontFamily="@font/open_sans_light"
                android:hint="Last Name"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                android:textColor="@color/darkGray"
                android:textColorHint="@color/darkGray"
                android:textSize="18sp"
                android:theme="@style/LoginEditTextStyle" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/EmailtextInputEditTextLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/LNametextInputEditTextLayout"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:elevation="0dp"
            app:cardCornerRadius="2dp"
            app:cardElevation="0dp">

            <EditText
                android:id="@+id/signUpEmailtextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="@drawable/background_rectangle_ouline"
                android:background="@null"
                android:backgroundTint="@color/fullwhite"
                android:fontFamily="@font/open_sans_light"
                android:hint="Email"
                android:lines="1"
                android:maxLines="1"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:inputType="textEmailAddress"
                android:paddingBottom="8dp"
                android:textColor="@color/darkGray"
                android:textColorHint="@color/darkGray"
                android:textSize="18sp"
                android:theme="@style/LoginEditTextStyle" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/linearLayout"
            android:layout_below="@id/EmailtextInputEditTextLayout"
            android:layout_width="match_parent"
            android:foreground="@drawable/background_rectangle_ouline"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:foreground="@drawable/background_rectangle_ouline"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginStart="8dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/textView2"
                    android:textColor="@color/darkGray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_light"
                    android:text="Gender"
                    android:textSize="18sp" />

                <RadioGroup
                    android:layout_gravity="center_vertical"
                    android:theme="@style/LoginSignUpProgressBar"
                    android:id="@+id/signup_rg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <RadioButton
                        android:textColor="@color/darkGray"
                        android:id="@+id/male_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male" />

                    <RadioButton
                        android:textColor="@color/darkGray"
                        android:id="@+id/female_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="Female" />

                </RadioGroup>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:foreground="@drawable/background_rectangle_ouline"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayout"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_below="@id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:foreground="@drawable/background_rectangle_ouline"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginStart="8dp"
                    android:textColor="@color/darkGray"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/open_sans_light"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:text="Community"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/community_spinner"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:foreground="@drawable/background_rectangle_ouline"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayout3"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_below="@id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:foreground="@drawable/background_rectangle_ouline"
                android:orientation="horizontal">

                <TextView
                    android:textColor="@color/darkGray"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/open_sans_light"
                    android:text="Country"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/country_spinner"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/citytextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayout2"
            android:foreground="@drawable/background_rectangle_ouline"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:elevation="0dp"
            app:cardCornerRadius="2dp"
            app:cardElevation="0dp">

            <EditText
                android:id="@+id/signUpCitySignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:backgroundTint="@color/fullwhite"
                android:fontFamily="@font/open_sans_light"
                android:hint="City"
                android:lines="1"
                android:maxLines="1"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                android:textColor="@color/darkGray"
                android:textColorHint="@color/darkGray"
                android:textSize="18sp"
                android:theme="@style/LoginEditTextStyle" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/PasswordtextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/citytextInputLayout"
            android:layout_marginStart="16dp"
            android:foreground="@drawable/background_rectangle_ouline"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:elevation="0dp"
            app:cardCornerRadius="2dp"
            app:cardElevation="0dp">

            <EditText
                android:id="@+id/signUpPasswordtextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:backgroundTint="@color/fullwhite"
                android:fontFamily="@font/open_sans_light"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingStart="8dp"
                android:lines="1"
                android:maxLines="1"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                android:textColor="@color/darkGray"
                android:textColorHint="@color/darkGray"
                android:textSize="18sp"
                android:theme="@style/LoginEditTextStyle" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/signUpButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/PasswordtextInputLayout"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:background="@color/fullwhite"
            android:elevation="0dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/basic"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="SIGN UP"
                android:textColor="@color/hamburger"
                android:textSize="20sp" />
        </androidx.cardview.widget.CardView>


        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/signup_prog"
            style="@style/AVLoadingIndicatorView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/PasswordtextInputLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:indicatorColor="@color/hamburger"
            app:indicatorName="BallClipRotateMultipleIndicator" />

        <LinearLayout
            android:layout_below="@id/signUpButton"
            android:layout_marginTop="32dp"
            android:id="@+id/footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/basic"
                android:text="Already have an account?"
                android:textColor="@color/drawerMenuGray"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/goBackToLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/montserrat"
                android:foreground="?attr/selectableItemBackground"
                android:text="Sign In"
                android:textColor="@color/hamburger"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>
</ScrollView>