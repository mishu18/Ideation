<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:scrollbars="none"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <include
            android:id="@+id/toolbarLayout"
            layout="@layout/toolbar" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_centerHorizontal="true"
            android:layout_below="@id/toolbarLayout"
            android:id="@+id/profileImgLayout"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                app:civ_border_overlay="true"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/hamburger"
                android:id="@+id/updateProfileProfileImg"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/main_user_profile_avatar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/updateProfileChooseImg"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="4dp"
                android:src="@drawable/ic_camera_alt_black_24dp"
                app:layout_constraintBottom_toBottomOf="@id/updateProfileProfileImg"
                app:layout_constraintEnd_toEndOf="@id/updateProfileProfileImg" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/updateProfileTitleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="@drawable/background_rectangle_ouline"
            android:layout_below="@id/profileImgLayout"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="2dp">

            <EditText
                android:id="@+id/updateProfileTitleEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:backgroundTint="@color/fullwhite"
                android:fontFamily="@font/open_sans_light"
                android:hint="Title"
                android:text=""
                android:inputType="textMultiLine"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                android:textColor="@color/darkGray"
                android:textColorHint="@color/drawerMenuGray"
                android:textSize="18sp"
                android:theme="@style/LoginEditTextStyle" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/updateProfileOverViewLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="@drawable/background_rectangle_ouline"
            android:layout_below="@id/updateProfileTitleLayout"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="2dp">

            <EditText
                android:id="@+id/updateProfileOverViewEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:backgroundTint="@color/fullwhite"
                android:fontFamily="@font/open_sans_light"
                android:hint="Overview (At least 80 Characters)"
                android:text=""
                android:inputType="textMultiLine"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                android:textColor="@color/darkGray"
                android:textColorHint="@color/drawerMenuGray"
                android:textSize="18sp"
                android:theme="@style/LoginEditTextStyle" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/updateProfileUniLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="@drawable/background_rectangle_ouline"
            android:layout_below="@id/updateProfileOverViewLayout"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="2dp">

            <EditText
                android:id="@+id/updateProfileUniEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:backgroundTint="@color/fullwhite"
                android:fontFamily="@font/open_sans_light"
                android:hint="University"
                android:text=""
                android:inputType="textMultiLine"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                android:textColor="@color/darkGray"
                android:textColorHint="@color/drawerMenuGray"
                android:textSize="18sp"
                android:theme="@style/LoginEditTextStyle" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/updateProfileDptLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="@drawable/background_rectangle_ouline"
            android:layout_below="@id/updateProfileUniLayout"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="2dp">

            <EditText
                android:id="@+id/updateProfileDptEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:backgroundTint="@color/fullwhite"
                android:fontFamily="@font/open_sans_light"
                android:hint="Department"
                android:text=""
                android:inputType="textMultiLine"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                android:textColor="@color/darkGray"
                android:textColorHint="@color/drawerMenuGray"
                android:textSize="18sp"
                android:theme="@style/LoginEditTextStyle" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/updateProfileaddrLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="@drawable/background_rectangle_ouline"
            android:layout_below="@id/updateProfileDptLayout"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="2dp">

            <EditText
                android:id="@+id/updateProfileaddrEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:backgroundTint="@color/fullwhite"
                android:fontFamily="@font/open_sans_light"
                android:hint="Address"
                android:text=""
                android:inputType="textMultiLine"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                android:textColor="@color/darkGray"
                android:textColorHint="@color/drawerMenuGray"
                android:textSize="18sp"
                android:theme="@style/LoginEditTextStyle" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/updateProfileSkillLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="@drawable/background_rectangle_ouline"
            android:layout_below="@id/updateProfileaddrLayout"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="2dp">

            <EditText
                android:id="@+id/updateProfileSkillEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:backgroundTint="@color/fullwhite"
                android:fontFamily="@font/open_sans_light"
                android:hint="Skills (Comma Separated)"
                android:inputType="textMultiLine"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                android:textColor="@color/darkGray"
                android:textColorHint="@color/drawerMenuGray"
                android:textSize="18sp"
                android:theme="@style/LoginEditTextStyle" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:foreground="@drawable/background_rectangle_ouline"
            android:id="@+id/updateProfileSpinnerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/updateProfileSkillLayout"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="2dp">

            <LinearLayout
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">
                <Spinner
                    android:theme="@style/mySpinnerItemStyle"
                    android:id="@+id/updateProfileCommSpinner"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/updateProfileUpdateBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/updateProfileSpinnerLayout"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/postSelectorBtnColor"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            app:cardCornerRadius="4dp">

            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/updateProfileProgress"
                style="@style/AVLoadingIndicatorView"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:indicatorColor="@color/fullwhite"
                app:indicatorName="BallClipRotateMultipleIndicator" />

            <TextView
                android:id="@+id/updateProfileUpdateBtnTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/basic"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="UPDATE PROFILE"
                android:textColor="@color/fullwhite"
                android:textSize="20sp" />
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</ScrollView>